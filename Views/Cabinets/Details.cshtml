@model BW5.Models.Cabinet

@{
    ViewData["Title"] = "Dettagli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1>Dettagli dell'Armadio</h1>
    <div>
        <h4>Informazioni sull'Armadio</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Codice:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Code)</dd>
        </dl>
    </div>
    <div class="text-right mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Modifica</a>
        <a asp-action="Index" class="btn btn-secondary ml-2">Torna all'Elenco</a>
    </div>
</div>
