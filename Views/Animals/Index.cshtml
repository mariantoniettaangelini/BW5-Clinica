@model IEnumerable<BW5.Models.Animal>

@{
    ViewData["Title"] = "Elenco Animali";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Assicurati che il layout sia corretto
}

<div class="container mt-5">
    <h1>Elenco Animali</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">Crea Nuovo</a>
    </p>
    <table class="table table-bordered">
        <thead class="bg-dark text-white">
            <tr>
                <th>Data di Registrazione</th>
                <th>Nome</th>
                <th>Tipo</th>
                <th>Colore del Manto</th>
                <th>Data di Nascita</th>
                <th>Microchip</th>
                <th>Nome Proprietario</th>
                <th>Cognome Proprietario</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.RegistrationDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Type)</td>
                    <td>@Html.DisplayFor(modelItem => item.CoatColor)</td>
                    <td>@Html.DisplayFor(modelItem => item.BirthDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Microchip)</td>
                    <td>@Html.DisplayFor(modelItem => item.OwnerFirstName)</td>
                    <td>@Html.DisplayFor(modelItem => item.OwnerLastName)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Modifica</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Dettagli</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger mt-2">Elimina</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
