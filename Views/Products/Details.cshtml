@model BW5.Models.Product

@{
    ViewData["Title"] = "Dettagli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1>Dettagli del Prodotto</h1>
    <h4>Informazioni sul Prodotto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
        <dt class="col-sm-2">Tipo di Prodotto:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ProductType)</dd>
        <dt class="col-sm-2">Utilizzi:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Uses)</dd>
        <dt class="col-sm-2">Fornitore:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Supplier.Address)</dd>
        <dt class="col-sm-2">Cassetto:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Drawer.Id)</dd>
    </dl>
    <div class="text-right mt-3">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Modifica</a>
        <a asp-action="Index" class="btn btn-secondary">Torna all'Elenco</a>
    </div>
</div>
