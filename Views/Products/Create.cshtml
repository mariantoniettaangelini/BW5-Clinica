@model BW5.Models.Product

@{
    ViewData["Title"] = "Crea Prodotto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Compila i dati</h1>
<hr />
<div class="row bg-light">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Nome</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductType" class="control-label">Tipo di Prodotto</label>
                <select asp-for="ProductType" class="form-control" asp-items="ViewBag.ProductTypes"></select>
                <span asp-validation-for="ProductType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Uses" class="control-label">Utilizzi</label>
                <input asp-for="Uses" class="form-control" />
                <span asp-validation-for="Uses" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SupplierId" class="control-label">Fornitore</label>
                <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
            </div>

            <div class="form-group">
                <label asp-for="DrawerId" class="control-label">Cassetto</label>
                <select asp-for="DrawerId" class="form-control" asp-items="ViewBag.DrawerId"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Crea" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="text-primary">Torna alla Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
