@model BW5.Models.Product

@{
    ViewData["Title"] = "Elimina";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1>Elimina Prodotto</h1>
    <h3>Sei sicuro di voler eliminare questo prodotto?</h3>
    <div>
        <h4>Dettagli del Prodotto</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Nome:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
            <dt class="col-sm-2">Tipo di Prodotto:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.ProductType)</dd>
            <dt class="col-sm-2">Utilizzi:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Uses)</dd>
            <dt class="col-sm-2">Fornitore:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Supplier.Address)</dd>
            <dt class="col-sm-2">Cassetto:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Drawer.Id)</dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Elimina" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary ml-2">Torna all'Elenco</a>
        </form>
    </div>
</div>
