@model IEnumerable<BW5.Models.Recovery>

@{
    ViewData["Title"] = "Elenco Ricoveri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <h1>Elenco Ricoveri</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Crea Nuovo</a>
        <a asp-action="Search" class="btn btn-info">Cerca</a>
        <a asp-action="RecoveryActive" class="btn btn-secondary">Ricoveri Attivi</a>
    </p>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(item.PhotoUrl))
                    {
                        <img src="@item.PhotoUrl" class="card-img-top" style="width: 100%; height: 250px; object-fit: cover;" alt="Foto di @item.Name">
                    }
                    else
                    {
                        <img src="~/images/default-placeholder.png" class="card-img-top" style="width: 100%; height: 250px; object-fit: cover;" alt="Nessuna immagine disponibile">
                    }

                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text"><strong>Tipo:</strong> @item.Type</p>
                        <p class="card-text"><strong>Colore del Manto:</strong> @item.CoatColor</p>
                        <p class="card-text"><strong>Data di Nascita:</strong> @item.BirthDate.ToString()</p>
                        <p class="card-text"><strong>Microchip:</strong> @item.Microchip</p>
                        <p class="card-text"><strong>Data di Ammissione:</strong> @item.AdmissionDate.ToString()</p>
                        <p class="card-text"><strong>Data di Dimissione:</strong> @item.DischargeDate?.ToString("dd/MM/yyyy")</p>
                    </div>

                    <div class="card-footer text-right">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Modifica</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Dettagli</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Elimina</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
