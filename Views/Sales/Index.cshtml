@model IEnumerable<BW5.Models.Sales>

@{
    ViewData["Title"] = "Indice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1>Indice delle Vendite</h1>
    <p>
        <a asp-action="Create" class="btn btn-primary">Crea Nuova Vendita</a>
        <a asp-action="CustomReport" class="btn btn-info">Lista Vendite</a>
        <a asp-action="DrawerAndCabinetPartial" class="btn btn-secondary">Lista Cassetti/Armadi</a>
    </p>
    <table class="table table-bordered">
        <thead class="bg-dark text-white">
            <tr>
                <th>Codice Fiscale Acquirente</th>
                <th>Prodotto</th>
                <th>Numero Ricetta</th>
                <th>Vendita del:</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CustomerFiscalCode)</td>
                    <td>@Html.DisplayFor(modelItem => item.Product.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.PrescriptionNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.SaleDate)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Modifica</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Dettagli</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Elimina</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
